<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="sise-servicio-pu"
		transaction-type="JTA">
		<jta-data-source>java:siseDS</jta-data-source>
		<properties>
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.hbm2ddl.auto" value="validate" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.SybaseDialect" />
			<property name="hibernate.default_schema" value="vida3" />
			<!-- <property name="hibernate.hbm2ddl.auto" value="validate" /> -->
		</properties>
	</persistence-unit>
</persistence>

